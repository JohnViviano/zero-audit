<%= form_with(model: [@audit, finding]) do |form| %>
  <% if finding.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(finding.errors.count, "error") %> prohibited this finding from being saved:</h2>
      <ul>
        <% finding.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :severity, style: "display: block" %>
    <%= form.select :severity,
        Finding.severities.keys.map { |s| [s.humanize, s] },
        { prompt: "Select severity" },
        class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status,
        Finding.statuses.keys.map { |s| [s.humanize, s] },
        { prompt: "Select status" },
        class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :remediation, style: "display: block" %>
    <%= form.text_area :remediation, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :due_on, style: "display: block" %>
    <%= form.date_field :due_on, class: "form-control" %>
  </div>

  <%= form.submit "Save Finding", class: "btn btn-primary" %>
<% end %>
