<%= form_with(model: @audit) do |form| %>
  <% if @audit.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@audit.errors.count, "error") %> prohibited this audit from being saved:</h2>
      <ul>
        <% @audit.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :owner %>
    <%= form.text_field :owner, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status %>
    <%= form.select :status,
        Audit.statuses.keys.map { |s| [s.humanize, s] },
        { prompt: "Select status" },
        class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :due_on %>
    <%= form.date_field :due_on, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control", rows: 4 %>
  </div>

  <%= form.submit "Save Audit", class: "btn btn-primary" %>
<% end %>
